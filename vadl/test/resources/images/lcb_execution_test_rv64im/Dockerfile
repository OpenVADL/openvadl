FROM ghcr.io/openvadl/lcb-execution-test-rv64im-base-image@sha256:7ddb70aa8c051c0c81cb251a92881b21dd6c31314a97e66555e3f11db5c18e27
ARG TARGET
ARG SCCACHE_REDIS_ENDPOINT
ARG UPSTREAM_BUILD_TARGET
ARG UPSTREAM_CLANG_TARGET
ARG SPIKE_TARGET
ARG ABI
WORKDIR /llvm/build
ENV TARGET=${TARGET}
ENV UPSTREAM_CLANG_TARGET=${UPSTREAM_CLANG_TARGET}
ENV LLVM_UPSTREAM_TARGETS=${UPSTREAM_BUILD_TARGET}
ENV SCCACHE_REDIS_ENDPOINT=${SCCACHE_REDIS_ENDPOINT}
ENV SPIKE_TARGET=${SPIKE_TARGET}
ENV ABI=${ABI}
COPY . /src
WORKDIR /src
RUN mv /opt/sccache/sccache /usr/bin
RUN make && sccache -s
RUN mkdir /output
CMD sh /work/compile.sh